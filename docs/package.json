{
    "name": "preact-prop-helpers-demo",
    "version": "0.0.1",
    "description": "A small set of hooks and other functions related to modifying Preact props.",
    "main": "index.tsx",
    "scripts": {
        "build": "npx npm-run-all --npm-path npm -sc build:js build:sass build:css",
        "watch": "npx npm-run-all --npm-path npm -pc watch:*",
        "watch:js": "rollup --config rollup.config.js --watch --no-watch.clearScreen",
        "watch:css-dark": "postcss index-dark-unprefixed.css -w --use autoprefixer -o index-dark.css",
        "watch:css-light": "postcss index-light-unprefixed.css -w --use autoprefixer -o index-light.css",
        "watch:sass": "sass --load-path=../node_modules --watch ./index-dark.scss:./index-dark-unprefixed.css ./index-light.scss:./index-light-unprefixed.css",
        "build:js": "rollup --config rollup.config.js",
        "build:css": "npx npm-run-all --npm-path npm -pc build:css-*",
        "build:css-dark": "postcss index-dark-unprefixed.css --use autoprefixer -o index-dark.css",
        "build:css-light": "postcss index-light-unprefixed.css --use autoprefixer -o index-light.css",
        "build:sass": "sass --load-path=../node_modules ./index-dark.scss:./index-dark-unprefixed.css ./index-light.scss:./index-light-unprefixed.css",
        "test": "echo \"Error: no test specified\" && exit 1",
        "install": "npm run build"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
        "@babel/preset-env": "^7.15.6",
        "@rollup/plugin-alias": "^3.1.5",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-typescript": "^8.2.3",
        "autoprefixer": "^10.3.4",
        "clsx": "^1.1.1",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "preact": "^10.5.14",
        "sass": "^1.41.0",
        "serve": "^12.0.1",
        "typescript": "^4.4.2"
    },
    "browserslist": [
        "defaults",
        "iOS >= 10"
    ],
    "dependencies": {
        "browserslist": "^4.16.8",
        "rollup-plugin-sourcemaps": "^0.6.3"
    }
}
