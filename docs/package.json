{
    "name": "preact-prop-helpers-demo",
    "version": "0.0.1",
    "description": "A small set of hooks and other functions related to modifying Preact props.",
    "main": "index.tsx",
    "scripts": {
        "build": "npx npm-run-all --npm-path npm -pc build:*",
        "watch": "npx npm-run-all --npm-path npm -pc watch:*",
        "watch:js": "rollup --config rollup.config.js --watch",
        "watch:sass": "sass --watch --load-path=node_modules ./index.scss:./index.css",
        "build:js": "rollup --config rollup.config.js",
        "build:sass": "sass --load-path=node_modules ./index.scss:./index.css",
        "test": "echo \"Error: no test specified\" && exit 1",
        "install": "npm run build"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-typescript": "^8.2.3",
        "clsx": "^1.1.1",
        "commander": "^6.2.1",
        "concurrently": "^5.3.0",
        "microbundle": "^0.13.3",
        "preact": "^10.5.14",
        "serve": "^12.0.1",
        "typescript": "^4.4.1-rc"
    },
    "browserslist": [
        "defaults",
        "iOS >= 12"
    ],
    "dependencies": {
        "browserslist": "^4.16.8"
    }
